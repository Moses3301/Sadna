<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="הוסף תפריט"
        android:textSize="30dp" />

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="560dp"
        android:layout_gravity="center"
        android:orientation="vertical">




        <EditText
            android:id="@+id/etAddName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:alpha="0.7"
            android:ems="10"
            android:hint="שם התפריט"
            android:inputType="textPersonName"
            android:selectAllOnFocus="true"
            android:textAlignment="center"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/etKeys"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:alpha="0.7"
            android:ems="10"
            android:hint="Keys"
            android:inputType="textPersonName"
            android:selectAllOnFocus="true"
            android:textAlignment="center"
            android:textSize="18dp" />


        <EditText
            android:id="@+id/etPostKeys"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:alpha="0.7"
            android:ems="10"
            android:hint="PostKeys"
            android:inputType="textPassword"
            android:selectAllOnFocus="true"
            android:textAlignment="center"
            android:textSize="18dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="200dp"
                android:text="DATA OPTION"
                android:textAlignment="center"
                android:layout_height="wrap_content"/>

            <android.support.v7.widget.SwitchCompat
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/switchDataOption"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <EditText
            android:id="@+id/etDataType"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:alpha="0.7"
            android:ems="10"
            android:visibility="invisible"
            android:hint="Data Type"
            android:inputType="textPersonName"
            android:selectAllOnFocus="true"
            android:textAlignment="center"
            android:textSize="18dp" />

        <Button
            android:id="@+id/btnAddOption"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:textColor="@color/colorWhite"
            android:background="@drawable/btn_style"
            android:onClick="onEmailPasswordSignUpClick"
            android:text="הוסף"
            android:textAllCaps="false"
            android:textSize="18dp" />
    </LinearLayout>



</LinearLayout>